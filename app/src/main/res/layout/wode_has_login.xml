<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wode_has_login_layout"
    android:layout_width="fill_parent"
    android:layout_height="180.0dip"
    android:background="@color/custom_pottery_red"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/wode_photo"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="12.0dip"
        android:background="@color/custom_white"
        android:gravity="center"
        android:padding="2dp"
        android:src="@drawable/avater" />

    <ImageView
        android:id="@+id/setting_has_login"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12.0dip"
        android:layout_marginTop="12.0dip"
        android:scaleType="centerInside"
        android:src="@drawable/mypage_navigationbar_icon_setting"
        android:visibility="visible" />

    <TextView
        android:id="@+id/wode_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wode_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10.0dip"
        android:text="wemall"
        android:textColor="@color/custom_white"
        android:textSize="16.0dip" />

</RelativeLayout>